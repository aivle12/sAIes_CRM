{{>main/header}}

<style>
    .button-container {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }
    .btn-custom-create {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
    .btn-custom-delete {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
    .btn-custom-create:hover {
        background-color: #c3e6cb;
        border-color: #b1dfbb;
    }
    .btn-custom-delete:hover {
        background-color: #f5c6cb;
        border-color: #f1b0b7;
    }
    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }
    .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }
    .col-form-label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #6c757d;
        border: none;
    }
    .btn-primary:hover {
        background-color: #5a6268;
    }
</style>

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Orders</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Orders</li>
            </ol>

            <!-- 상단 데이터 요약 카드 바 -->
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">주문 초안</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="draftCount">{{draftCount}} 건</h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">주문 완료</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="completedCount">{{completedCount}} 건</h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">사용 중</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="activatedCount">{{activatedCount}} 건</h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">주문 취소</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="cancelledCount">{{cancelledCount}} 건</h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 차트 -->
            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            연간 주문 현황
                        </div>
                        <div class="card-body"><canvas id="ordersReadChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            연간 주문 누적 현황
                        </div>
                        <div class="card-body"><canvas id="ordersReadBar" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>

            <!-- Orders 테이블 -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    My Orders
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">

                        <div class="button-container mb-3">

                            <div class="search-container">
                                <input type="text" id="customSearch" placeholder="검색어를 입력하세요" style="margin-bottom: 10px; padding: 5px; width: 200px;">
                                <button id="searchButton" style="margin-left: 5px;">검색</button>
                            </div>

                            <form method="GET" action="/orders">
                                <select name="sortColumn">
                                    <option value="orderDate" {{#isOrderDateSorted}}selected{{/isOrderDateSorted}}>Order Date</option>
                                    <option value="orderAmount" {{#isOrderAmountSorted}}selected{{/isOrderAmountSorted}}>Amount</option>
                                </select>
                                <select name="sortDirection">
                                    <option value="asc" {{#isAscSorted}}selected{{/isAscSorted}}>Ascending</option>
                                    <option value="desc" {{#isDescSorted}}selected{{/isDescSorted}}>Descending</option>
                                </select>
                                <button type="submit">정렬</button>
                            </form>

                            <a href="/orders/detail/create" class="btn btn-custom-create btn-sm" id="createButton">
                                <i class="fas fa-plus-circle"></i> 신규
                            </a>
                            <button class="btn btn-custom-delete btn-sm" id="deleteButton">
                                <i class="fas fa-trash-alt"></i> 삭제
                            </button>
                        </div>

                        <thead>
                        <tr>
                            <th></th>
                            <th>ID</th>
                            <th>발주일자</th>
                            <th>매출일자</th>
                            <th>상태</th>
                            <th>수량</th>
                            <th>제품ID</th>
                            <th>계약ID</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#orders}}
                            <tr data-index="{{orderId}}">
                                <td><input type="checkbox" class="select-row" value="{{orderId}}"></td>
                                <td><a href="/orders/detail/{{orderId}}">{{orderId}}</a></td>
                                <td>{{orderDate}}</td>
                                <td>{{salesDate}}</td>
                                <td>{{orderStatus}}</td>
                                <td>{{orderAmount}}</td>
                                <td>{{productId.productId}}</td>
                                <td>{{contractId.contractId}}</td>
                            </tr>
                        {{/orders}}
                        </tbody>
                    </table>

                    <div class="pagination">
                        <!-- 이전 버튼 -->
                        {{#hasPreviousPage}}
                            <button onclick="window.location.href='/orders?page={{previousPage}}&size=10&search={{search}}&sortColumn={{sortColumn}}&sortDirection={{sortDirection}}'">
                            이전
                            </button>
                        {{/hasPreviousPage}}

                        <!-- 페이지 번호 버튼 -->
                        {{#pageNumbers}}
                            <button
                                    onclick="window.location.href='/orders?page={{page}}&size=10&search={{search}}&sortColumn={{sortColumn}}&sortDirection={{sortDirection}}'"
                            class="{{#isActive}}active{{/isActive}}">
                            {{displayPage}}
                            </button>
                        {{/pageNumbers}}

                        <!-- 다음 버튼 -->
                        {{#hasNextPage}}
                            <button onclick="window.location.href='/orders?page={{nextPage}}&size=10&search={{search}}&sortColumn={{sortColumn}}&sortDirection={{sortDirection}}'">
                            다음
                            </button>
                        {{/hasNextPage}}
                    </div>


                </div>
            </div>
        </div>
    </main>

    <script>
            // 검색 기능 구현 예정

            var deleteButton = document.getElementById("deleteButton");
            if (deleteButton) {
                deleteButton.addEventListener("click", function() {
                    var selectedCheckboxes = document.querySelectorAll(".select-row:checked");
                    var selectedIds = [];

                    selectedCheckboxes.forEach(function(checkbox) {
                        var orderId = checkbox.value;
                        selectedIds.push(orderId);
                    });

                    if (selectedIds.length > 0) {
                        var confirmDelete = confirm("선택한 항목들을 삭제하시겠습니까?");
                        if (confirmDelete) {
                            fetch("/orders/detail/delete", {
                                method: "POST",
                                headers: {
                                    "Content-Type": "application/json"
                                },
                                body: JSON.stringify({ ids: selectedIds })
                            }).then(response => {
                                if (response.ok) {
                                    window.location.href = "/orders";
                                } else {
                                    alert("삭제 중 오류가 발생했습니다.");
                                }
                            }).catch(error => {
                                console.error("Error:", error);
                                alert("삭제 중 오류가 발생했습니다.");
                            });
                        }
                    } else {
                        alert("삭제할 항목을 선택해 주세요.");
                    }
                });
            }
        });
    </script>

    <script src="/assets/demo/orders-read-chart.js"></script>
    <script src="/assets/demo/orders-read-bar.js"></script>

    {{>main/footer}}