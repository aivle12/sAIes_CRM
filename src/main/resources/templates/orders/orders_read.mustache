{{>main/header}}

<style>
    .button-container {
        display: flex;
        justify-content: flex-end; /* 오른쪽 정렬 */
        gap: 10px; /* 버튼 간격 */
    }
    .btn-custom-create {
        background-color: #d4edda; /* 파스텔 그린 */
        border-color: #c3e6cb;
        color: #155724;
    }
    .btn-custom-delete {
        background-color: #f8d7da; /* 파스텔 레드 */
        border-color: #f5c6cb;
        color: #721c24;
    }
    .btn-custom-create:hover {
        background-color: #c3e6cb; /* 약간 어두운 그린 */
        border-color: #b1dfbb;
    }
    .btn-custom-delete:hover {
        background-color: #f5c6cb; /* 약간 어두운 레드 */
        border-color: #f1b0b7;
    }
    .btn-sm {
        font-size: 0.875rem; /* 버튼 폰트 크기 감소 */
        padding: 0.25rem 0.5rem; /* 패딩 감소 */
    }
</style>





<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Orders</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Orders</li>
            </ol>
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">주문 확정 예정</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="draftCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">주문 확정</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="activatedCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">주문 취소</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="cancelledCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            연간 주문 현황
                        </div>
                        <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            연간 주문 누적 현황
                        </div>
                        <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>



            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    My Orders
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">

                        <div class="button-container mb-3">
                            <button id="createButton" class="btn btn-custom-create btn-sm">
                                <i class="fas fa-plus-circle"></i> 신규
                            </button>
                            <button id="deleteButton" class="btn btn-custom-delete btn-sm">
                                <i class="fas fa-trash-alt"></i> 삭제
                            </button>
                        </div>

                        <thead>
                        <tr>
                            <th></th>
                            <th>ID</th>
                            <th>발주일자</th>
                            <th>매출일자</th>
                            <!-- <th>계정이름</th> -->
                            <!-- <th>제품명</th> -->
                            <!-- <th>매출일자</th>-->
                            <th>상태</th>
                            <th>수량</th>
                            <th>제품ID</th>
                            <th>계약ID</th>

                        </tr>
                        </thead>
                        <tbody>
                        {{#orders}}
                        <tr data-index="{{orderId}}">
                            <td><input type="checkbox" class="select-row"></td>
                            <td><a href="/orders/detail/{{orderId}}">{{orderId}}</a></td>
                            <td>{{orderDate}}</td>
                            <td>{{salesDate}}</td>
                            <!-- <td>계정이름</td> -->
                            <!-- <td>제품명</td> -->
                            <td>{{orderStatus}}</td>
                            <td>{{orderAmount}}</td>
                            <td>{{productId}}</td>
                            <td>{{contractId}}</td>
                            <!-- <td>기회소유자</td> -->

                        </tr>
                        {{/orders}}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </main>


    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var rows = document.querySelectorAll("#datatablesSimple tbody tr");
            var draftCount = 0;
            var activatedCount = 0;
            var cancelledCount = 0;

            rows.forEach(function(row) {
                var status = row.querySelector("td:nth-child(5)").innerText.trim();
                var targetorderDate = new Date(row.querySelector("td:nth-child(3)").innerText.trim());
                var targetsalesDate = new Date(row.querySelector("td:nth-child(4)").innerText.trim());

                if (status === "draft") {
                    draftCount++;
                } else if (status === "activated") {
                    activatedCount++;
                } else if (status === "cancelled") {
                    cancelledCount++;
                }
            });

            // 상태별 주문 수량 업데이트
            document.getElementById("draftCount").innerText = `${draftCount} 건`;
            document.getElementById("activatedCount").innerText = `${activatedCount} 건`;
            document.getElementById("cancelledCount").innerText = `${cancelledCount} 건`;
        });
    </script>




    {{>main/footer}}
