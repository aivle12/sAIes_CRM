{{>main/header}}

<!-- FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />

<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">My Sales Calendar</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Calendar for Opportunity History</li>
            </ol>
            <div class="row"><div>

            <div class="row">


            <!-- 켈린더 상세내용 부분 -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    My Sales Calendar
                </div>
                <div class="card-body">
                    <table id="my_sales_calendar">
                        <div id="calendar"></div>
                    </table>
                </div>
            </div>

        </div>



                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        var calendarEl = document.getElementById('calendar');

                        var calendar = new FullCalendar.Calendar(calendarEl, {
                            initialView: 'dayGridMonth',
                            events: [
                    {{#history}}
                        {
                            title: '{{historyTitle}}',
                    start: '{{historyDate}}T{{historyTime}}',
                    description: '{{actionTaken}}',
                    customerRepresentative: '{{customerRepresentative}}',
                    meetingPlace: '{{meetingPlace}}',
                    customerRequirements: '{{customerRequirements}}'
                },
                    {{/history}}
                    ],
                    eventClick: function(info) {
                        alert(
                            '일정명: ' + info.event.title +
                            '\n영업분류: ' + info.event.extendedProps.description +
                            '\n고객담당자: ' + info.event.extendedProps.customerRepresentative +
                            '\n미팅장소: ' + info.event.extendedProps.meetingPlace +
                            '\n고객요청사항: ' + info.event.extendedProps.customerRequirements
                        );
                    }
                });

                calendar.render();
            });
                </script>





    </main>





{{>main/footer}}