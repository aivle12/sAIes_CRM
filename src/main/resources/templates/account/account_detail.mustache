    function validateWebsite(url) {
        const websiteRegex = /^(https?:\/\/)?(www\.)?[a-zA-Z0-9-]+\.[a-zA-Z]{2,6}(\.[a-zA-Z]{2,6})?(\/.*)?$/;
        return websiteRegex.test(url);
    }

    function validateContact(contact) {
