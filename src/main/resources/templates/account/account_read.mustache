<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Account</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Account</li>
            </ol>
            <!-- 상단 데이터 요약 카드 바 -->
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">모든 계정</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="ongoingCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">내 계정</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="overdueCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <!-- 차트1 -->
                    <div class="col-xl-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-chart-area me-1"></i>
                                    계정 유형
                            </div>
                            <div class="card-body">
                                <canvas id="opportunitiesReadChart" width="100%" height="40"></canvas>
                            </div>
                        </div>
                    </div>

                    <!-- 차트2 -->
                    <div class="col-xl-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-chart-bar me-1"></i>
                                계정 생성 추이
                            </div>
                            <div class="card-body">
                                <canvas id="opportunitiesReadBar" width="100%" height="40"></canvas>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- 계정 테이블 -->
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        My Account
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">

                            <div class="button-container mb-3">
                                <a href="/account/detail/create" class="btn btn-custom-create btn-sm" id="createButton">
                                    <i class="fas fa-plus-circle"></i>계정 생성
                                </a>

                                <button class="btn btn-custom-delete btn-sm" id="deleteButton">
                                    <i class="fas fa-plus-circle"></i>삭제
                                </button>
                            </div>

                            <thead>
                            <tr>
                                <th></th>
                                <th>ID</th>
                                <th>생성 일자</th>
                                <th>계정 이름</th>
                                <th>계정 상태</th>
                                <th>대표 전화</th>
                                <th>배송지</th>

                            </tr>
                            </thead>
                            <tbody>
                            {{#accounts}}
                                <tr data-index="{{accountId}}">
                                    <td><input type="checkbox" class="select-row" value="{{accountId}}"></td>
                                    <td>{{accountId}}</td>
                                    <td>{{accountCreatedDate}}</td>
                                    <td><a href="/account/detail/{{accountId}}">{{accountName}}</a></td>
                                    <td>{{accountStatus}}</td>
                                    <td>{{contact}}</td>
                                    <td>{{address}}</td>
                                </tr>
                            {{/accounts}}
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </main>


    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var rows = document.querySelectorAll("#datatablesSimple tbody tr");
            var now = new Date();
            var ongoingCount = 0;
            var overdueCount = 0;
            var closedCount = 0;
            var pendingCount = 0;

            rows.forEach(function(row) {
                var status = row.querySelector("td:nth-child(6)").innerText;
                var targetCloseDate = new Date(row.querySelector("td:nth-child(7)").innerText);

                if (!status.startsWith("Closed")) {
                    ongoingCount++;
                }

                if (status === "Closed(won)") {
                    closedCount++;
                }
                if (status === "Pending") {
                    pendingCount++;
                }
                if (targetCloseDate < now && !status.startsWith("Closed")) {
                    overdueCount++;
                }
            });

            document.getElementById("ongoingCount").innerText = `${ongoingCount} 건`;
            document.getElementById("overdueCount").innerText = `${overdueCount} 건`;
            document.getElementById("closedCount").innerText = `${closedCount} 건`;
            document.getElementById("pendingCount").innerText = `${pendingCount} 건`;
        });








    document.addEventListener("DOMContentLoaded", function() {
        var deleteButton = document.getElementById("deleteButton");
        if (deleteButton) {
            deleteButton.addEventListener("click", function() {
                var selectedCheckboxes = document.querySelectorAll(".select-row:checked");
                var selectedIds = [];

                selectedCheckboxes.forEach(function(checkbox) {
                    var accountId = checkbox.value;
                    console.log("Account ID:", accountId); // 로그 추가
                    selectedIds.push(accountId);
                });

                if (selectedIds.length > 0) {
                    var confirmDelete = confirm("선택한 항목들을 삭제하시겠습니까?");

                    if (confirmDelete) {
                        console.log("Deleting IDs:", selectedIds); // 로그 추가
                        fetch("/account/detail/delete", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify({ ids: selectedIds })
                        }).then(response => {
                            if (response.ok) {
                                // 서버 응답이 성공적이면 리다이렉트 수행
                                window.location.href = "/account";
                            } else {
                                alert("삭제 중 오류가 발생했습니다.");
                            }
                        }).catch(error => {
                            console.error("Error:", error);
                            alert("삭제 중 오류가 발생했습니다.");
                        });
                    }
                } else {
                    alert("삭제할 항목을 선택해 주세요.");
                }
            });
        }
    });


    </script>

