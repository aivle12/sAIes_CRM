<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4 mt-4">
            <!-- 첫 번째 행 -->
            <div class="row mb-4 align-items-stretch">
                <!-- 1행 1열 -->
                <div class="col-xl-4 col-md-6 d-flex">
                    <div class="card h-100 w-100">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            금일 배정된 리드
                        </div>
                        <div class="lead-stats d-flex justify-content-around align-items-center h-100">
                            <div class="stat">
                                <div class="circle" id="todayLeads"></div>
                                <p>새로운<br>리드</p>
                            </div>
                            <div class="stat">
                                <div class="circle" id="underReviewLeads"></div>
                                <p>검토중<br>리드</p>
                            </div>
                            <div class="stat">
                                <div class="circle" id="closedLeads"></div>
                                <p>오늘 마감<br>리드</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 1행 2열 -->
                <div class="col-xl-8 col-md-6">
                    <div class="card h-100">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            이달의 기회 목록
                        </div>
                        <div class="card-body">
                            <div class="row g-3 mb-3">
                                <div class="col-12 col-md-6">
                                    <div class="card bg-primary text-white h-100" data-bs-toggle="modal" data-bs-target="#progressModal">
                                        <div class="card-body">진행중</div>
                                        <div class="card-footer d-flex align-items-center justify-content-between">
                                            <h3 id="ongoingCountTeam">0 건</h3>
                                            <div class="small text-white">
                                                <a href="" class="text-white">
