<style>
    .button-container {
        display: flex;
        justify-content: flex-end; /* 오른쪽 정렬 */
        gap: 10px; /* 버튼 간격 */
    }
    .btn-custom-create {
        background-color: #d4edda; /* 파스텔 그린 */
        border-color: #c3e6cb;
        color: #155724;
    }
    .btn-custom-delete {
        background-color: #f8d7da; /* 파스텔 레드 */
        border-color: #f5c6cb;
        color: #721c24;
    }
    .btn-custom-create:hover {
        background-color: #c3e6cb; /* 약간 어두운 그린 */
        border-color: #b1dfbb;
    }
    .btn-custom-delete:hover {
        background-color: #f5c6cb; /* 약간 어두운 레드 */
        border-color: #f1b0b7;
    }
    .btn-sm {
        font-size: 0.875rem; /* 버튼 폰트 크기 감소 */
        padding: 0.25rem 0.5rem; /* 패딩 감소 */
    }


    .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }
    .col-form-label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #6c757d;
        border: none;
    }
    .btn-primary:hover {
        background-color: #5a6268;
    }


</style>





<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Contracts</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Contracts</li>
            </ol>
            <!-- 상단 데이터 요약 카드 바 -->
            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">모든 계약</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="allCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">승인 처리 중 계약</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="approvalCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">활성화된 계약</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="activatedCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">초안 계약</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <h3 id="draftCount"></h3>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 계약테이블 -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Contracts List
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">

                        <div class="button-container mb-3">
                            <a href="/contracts/detail/create" class="btn btn-custom-create btn-sm" id="createButton">
                                <i class="fas fa-plus-circle"></i> 신규
                            </a>

                            <button class="btn btn-custom-delete btn-sm" id="deleteButton">
                                <i class="fas fa-plus-circle"></i> 삭제
                            </button>
                        </div>

                        <thead>
                        <tr>
                            <th></th>
                            <th>ID</th>
                            <th>계정 이름</th>
                            <th>계약 시작 날짜</th>
                            <th>계약 종료 날짜</th>
                            <th>상태</th>
                            <th>계약 분류</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#contracts}}
                            <tr data-index="{{contractId}}">
                                <td><input type="checkbox" class="select-row" value="{{contractId}}"></td>
                                <td>
                                    <a href="/contracts/detail/{{contractId}}">
                                        {{contractId}}
                                    </a>
                                </td>
                                <td>{{accountId.accountName}}</td>
                                <td>{{startDate}}</td>
                                <td>{{terminationDate}}</td>
                                <td>{{contractStatus}}</td>
                                <td>{{contractClassification}}</td>
                            </tr>
                        {{/contracts}}
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </main>


    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var rows = document.querySelectorAll("#datatablesSimple tbody tr");

            var allCount = 0;        // Draft, In Approval Process, Activated 전체 개수
            var approvalCount = 0;   // In Approval Process 개수
            var activatedCount = 0;  // Activated 개수
            var draftCount = 0;      // Draft 개수

            rows.forEach(function(row) {
                var status = row.querySelector("td:nth-child(5)").innerText.trim();

                // 우리가 체크하고자 하는 3가지 상태 중 하나인 경우에만 allCount 증가
                if (status === "Draft" || status === "In Approval Process" || status === "Activated") {
                    allCount++;

                    if (status === "Draft") {
                        draftCount++;
                    } else if (status === "In Approval Process") {
                        approvalCount++;
                    } else if (status === "Activated") {
                        activatedCount++;
                    }
                }
            });

            document.getElementById("allCount").innerText = `${allCount} 건`;
            document.getElementById("approvalCount").innerText = `${approvalCount} 건`;
            document.getElementById("activatedCount").innerText = `${activatedCount} 건`;
            document.getElementById("draftCount").innerText = `${draftCount} 건`;
        });








    document.addEventListener("DOMContentLoaded", function() {
        var deleteButton = document.getElementById("deleteButton");
        if (deleteButton) {
            deleteButton.addEventListener("click", function() {
                var selectedCheckboxes = document.querySelectorAll(".select-row:checked");
                var selectedIds = [];

                selectedCheckboxes.forEach(function(checkbox) {
                    var contractId = checkbox.value;
                    console.log("Contract ID:", contractId); // 로그 추가
                    selectedIds.push(contractId);
                });

                if (selectedIds.length > 0) {
                    var confirmDelete = confirm("선택한 항목들을 삭제하시겠습니까?");

                    if (confirmDelete) {
                        console.log("Deleting IDs:", selectedIds); // 로그 추가
                        fetch("/contracts/detail/delete", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify({ ids: selectedIds })
                        }).then(response => {
                            if (response.ok) {
                                // 서버 응답이 성공적이면 리다이렉트 수행
                                window.location.href = "/contracts";
                            } else {
                                alert("삭제 중 오류가 발생했습니다.");
                            }
                        }).catch(error => {
                            console.error("Error:", error);
                            alert("삭제 중 오류가 발생했습니다.");
                        });
                    }
                } else {
                    alert("삭제할 항목을 선택해 주세요.");
                }
            });
        }
    });





    </script>

